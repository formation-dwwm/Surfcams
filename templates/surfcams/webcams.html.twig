{% extends 'base.html.twig' %}

{% block body %}

<div id="webcam-menu-title" class="d-flex">
<p></p>

<div class="d-flex align-items-center"><img src="./../images/camera.png"><h1>Les Webcams</h1></div>
    <div class="flipswitch">
        <input type="checkbox" name="flipswitch" class="flipswitch-cb" id="fs" checked>
        <label class="flipswitch-label" for="fs">
            <div class="flipswitch-inner"></div>
            <div class="flipswitch-switch"></div>
        </label>
    </div>
</div>
<div id="cards-container">

{% for spot in spots %}

        <a data-toggle="modal" data-target="#mod-{{ spot.id }}" class="webcams-cards-modal-link">
            <div class="webcams-cards-container">
                <img class="webcams-cards-image" src="{{ spot.picture }}" alt="{{ spot.title }}">
                    <div class="webcams-cards-content">
                        <h3>{{ spot.title }}</h3>
                    </div>
            </div>
        </a>
{% endfor %}

</div>

{% for spot in spots %}

        <div class="modal fade" id="mod-{{ spot.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">{{ spot.title }}</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                <div class="modal-body">
                    <img id="brutal-beach-webcam-link" src="http://nexpa.ddns.net:8080/tmpfs/auto.jpg">
            </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
        </div>
        </div>
    </div>
</div>

{% endfor %}



