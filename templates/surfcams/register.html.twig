{% if error != NULL %}         
<div class="alert alert-danger w-100 m-auto">{{ error }}</div> 
{% elseif success == true %}      
 <div class="alert alert-success w-25 m-auto d-flex flex-column justify-content-center align-items-center" role="alert">{{ success }}<button type="button" class="btn btn-success" style="margin-top: 1rem;"><a href="/Login" style="color: #FFF; text-decoration: none;">Continuer vers le login</a></button></div>  
 {% endif %}
<body>
<form action="/Register" method="post" class="w-25 mx-auto">
<div class="d-flex justify-content-around align-items-center" id="card-header"><img src="./../img/logo_wave.png" width="64px"><h1>INSCRIPTION</h1></div>
<div class="p-3">
<div class="test">
          <div class="form-group">
            <label for="exampleInputEmail1">Nom d'utilisateur :</label>
            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter account" name="username">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Email :</label>
            <input type="email" class="form-control" id="exampleInputPassword1" placeholder="email" name="email">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Mot de passe :</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
          </div>
    
          <div class="form-group">
            <label for="exampleInputPassword1">Répétez le mot de passe :</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="passwordRepeat">
          </div>
          <div class="d-flex justify-content-between align-items-center"><button type="submit" class="btn btn-success">Créer mon compte</button><span><a href="/Login" style="color: #f8f9fa;">Déjà inscrit ?</a></span></div>
</div>
</div>
</form>



</body>

