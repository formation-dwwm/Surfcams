<body>
    <form action="/Login" method="post" class="w-25 mx-auto">
        <div class="d-flex justify-content-around align-items-center" id="card-header"><img src="./../img/logo_wave.png" width="64px"><h1>CONNEXION</h1></div>
            <div class="p-3">
                <div class="form-group">
                    <label for="exampleInputEmail1">Nom d'utlisateur :</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter account" name="name">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Mot de passe :</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="pass">
            </div>
        <div class="d-flex justify-content-between align-items-center"><button type="submit" class="btn btn-success">Se connecter</button><span><a href="/Register" style="color: #f8f9fa;">S'inscire ?</a><span></div>
    </form>
    </div>

{% if error != NULL %}         
<div class="alert alert-danger w-25 m-auto">{{ error }}</div> 
{% elseif success == true %}      
 <div class="alert alert-success w-25 m-auto d-flex flex-column justify-content-center align-items-center" role="alert">{{success}}</div>   
 {% endif %}
</body>

